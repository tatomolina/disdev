<h1 class="text-center">StandUp</h1>
<div class = "row">
  <%= render 'yesterday' %>

  <%= render 'today' %>
</div>
<div class="text-center">
  <div class="btn-group ">
    <%= link_to 'New', new_stand_up_path, class: "btn btn-primary btn-lg" %>
    <% if policy(@standUp).edit? %>
      <%= link_to 'Edit', edit_stand_up_path(@standUp),
       class: "btn btn-primary btn-lg"  %>
    <% end %>
    <% if policy(@standUp).destroy? %>
      <%= link_to 'Delete', stand_up_path(@standUp), method: :delete,
       class: "btn btn-primary btn-lg" %>
    <% end %>
    <%= link_to 'Back', (request.referrer || stand_ups_path),
     class: "btn btn-primary btn-lg" %>
  </div>
</div>
