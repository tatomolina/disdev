<%= form_for @standUp do |form| %>
<div class="col-md-6">
  <h2 class="text-center">Today</h2>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="text-center panel-title">Tasks</h3>
    </div>

    <div class="panel-body">
      <%= form.fields_for :tasks do |task| %>
        <div class="form-group">
          <%= task.label :title %>
          <%= task.text_field :title, class: "form-control" %><br/>
          <%= task.label :description %>
          <%= task.text_area :description, class: "form-control" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="text-center panel-title">Blockers</h3>
    </div>

    <div class="panel-body">
      <%= form.fields_for :blockers do |blocker| %>
        <%= blocker.label :title %>
        <%= blocker.text_field :title, class: "form-control" %><br/>
        <%= blocker.label :description %>
        <%= blocker.text_area :description, class: "form-control" %>
      <% end %>
    </div>
  </div>
</div>

<%= form.submit 'New', :class => 'btn btn-primary text-center' %>
<% end %>
