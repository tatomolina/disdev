<div class ="col-md-6" >
  <h2 class="text-center">Last StandUp</h2>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="text-center panel-title">Tasks</h3>
    </div>

    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked text-center">
        <% if @standUps.size > 1 #Do this to check if it is the first standUp %>
          <% if @standUp.created_at == nil #check if i am on new%>
            <% @standUps.first.tasks.each do |task| %>
              <li><%= link_to task.title, task_path(task) %></li>
            <% end %>
          <% else %>
            <% @standUps.second.tasks.each do |task| %>
              <li><%= link_to task.title, task_path(task) %></li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="text-center panel-title">Blockers</h3>
    </div>

    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked text-center">
        <% if @standUps.size > 1 #Do this to check if it is the first standUp %>
          <% if @standUp.created_at == nil #check if i am on new%>
            <% @standUps.first.blockers.each do |blocker| %>
              <li><%= link_to blocker.title, blocker_path(blocker) %></li>
            <% end %>
          <% else %>
            <% @standUps.second.blockers.each do |blocker| %>
              <li><%= link_to blocker.title, blocker_path(blocker) %></li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

</div>
