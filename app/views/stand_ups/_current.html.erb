<div class="col-md-6">
  <h2 class="text-center">Current</h2>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="text-center panel-title">Tasks</h3>
  </div>

  <div class="panel-body">
    <table class="table table-hover">
      <% @standUp.tasks.each do |task| %>
        <tr>
          <td>
            <div class="text-center">
              <%= task.description %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<% if @standUp.blockers.any? %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="text-center panel-title">Blockers</h3>
  </div>

  <div class="panel-body">
    <table class="table table-hover">
      <% @standUp.blockers.each do |blocker| %>
        <tr>
          <td>
            <div class="text-center">
              <%= link_to blocker.title, blocker_path(blocker) %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<% end %>
