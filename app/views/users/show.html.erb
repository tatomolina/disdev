<h1 class="text-center"><%= @user.email %></h1>

<h1 class="text-center">Work Groups</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel">
      <table class="table table-hover text-center">
        <tr>
          <th class="text-center">Work Groups</th>
          <th class="text-center">Last StandUp</th>
        </tr>
        <% if @user.work_groups.present? %>
          <% @user.work_groups.each do |group| %>
            <tr>
              <td><%= link_to group.name, work_group_path(group) %></td>
              <td>
                <%# Ask if there is a stand up to link, if not show a msg%>
                <% last_stand_up = @user.last_stand_up(group) %>
                <% if last_stand_up.present? %>
                  <%= link_to last_stand_up.created_at.to_s(:long), stand_up_path(last_stand_up)%>
                <% else %>
                  No StandUp Created Yet
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td>You are not in any group</td>
            <td>No StandUp Created Yet</td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="text-center">
      <%= link_to 'New WorkGroup', new_work_group_path, class: "btn btn-primary" %>
  <br/>
  <br/>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Messages
      </div>
      <div class="panel-body">
      <table class="table">
      <% @user.mailbox.notifications.each do |notification| %>
        <tr>
        <td>
          <%= notification.subject %><br>
          <%= notification.body %>
        </td>
        </tr>
      <% end %>
      </table>
      </div>
    </div>
  </div>
</div>
