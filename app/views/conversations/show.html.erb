<div class="row">
  <br>
  <div class="col-md-2">
    <%= render partial: 'users/user_profile', locals: { user: current_user } %>
  </div>

  <div class="col-md-10">
    <%= render partial: 'users/user_navbar', locals: { user: current_user } %>

    <div class="row">

      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= render 'mailbox/folders' %>
          </div>
        </div>
        <%= link_to "Compose", new_conversation_path, class: "btn btn-success" %>
      </div>

      <div class="col-md-8">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= render partial: 'messages' %>
          </div>
          <div class="panel-footer">
            <!-- Reply Form -->
            <%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
                <div class="form-group">
                  <%= f.text_area :body, placeholder: "Reply Message", rows: 4, class: "form-control" %>
                </div>
                <%= f.submit "Reply", class: 'btn btn-danger pull-right' %>
            <% end %>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
