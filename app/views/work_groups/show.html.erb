<% provide(:title, "WorkGroup") %>

<div class="row">
  <br>
  <div class="col-md-2">
    <%= render 'work_group_profile' %>
  </div>
  <div class="col-md-10">
    <%= render 'work_group_navbar' %>
    <% @group_activities = [] %>
    <% @activities.each do |activity| %>
        <% if activity.trackable.try(:project).try(:work_group) == @workGroup || activity.trackable.try(:stand_up).try(:project).try(:work_group) == @workGroup %>
          <% @group_activities << activity %>
        <% end %>
    <% end %>
    <% if @group_activities.any? %>
      <table class="table">
        <% @group_activities.each do |group_activity| %>
          <tr>
            <td>
              <div class="row">
                <%= render_activity group_activity %>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
    <% else %>
      <h3>
        There's nothing new
      </h3>
    <% end %>
  </div>
</div>
