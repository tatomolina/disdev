<% provide(:title, "WorkGroup") %>
<br/>
<h1 class="text-center"><%= @workGroup.name %> StandUps:</h1>
<br/>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel">
      <table class="table table-hover text-center">
        <tr>
          <th class="text-center">User</th>
          <th class="text-center">StandUp</th>
        </tr>
        <% @workGroup.users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <% if user.stand_ups.present? %>
              <td><%= link_to user.stand_ups.last.created_at.to_formatted_s(:long),
              stand_up_path(user.stand_ups.last) %></td>
            <% else %>
              <td><p>Hasn't created a standUp yet</p></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
