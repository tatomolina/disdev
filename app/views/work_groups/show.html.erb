<% provide(:title, "WorkGroup") %>
<br/>
<h1 class="text-center"><%= @workGroup.name %> StandUps:</h1>
<br/>
<br/>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if policy(@workGroup).manage? %>
    <div class="text-center">
      <%= link_to 'Manage Group', manage_path, class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <br/>
    <br/>
    <div class="panel">
      <table class="table table-hover text-center">
        <tr>
          <th class="text-center">User</th>
          <th class="text-center">StandUp</th>
        </tr>
        <%#Show in a table the user email and the last standUp he made%>
        <% @workGroup.users.each do |user| %>
          <tr>
            <td><%= link_to user.email, user_path(user) %></td>
            <td>
              <%# Ask if there is a stand up to link, if not show a msg%>
              <% last_stand_up = user.last_stand_up(@workGroup) %>
              <% if last_stand_up.present? %>
                <%= link_to last_stand_up.created_at.to_s(:long), stand_up_path(last_stand_up)%>
              <% else %>
                No StandUp Created Yet
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
