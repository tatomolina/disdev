<h1 class="text-center">WorkGroups</h1>

<br/><br/>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= render 'search' %>

    <div class="panel">
      <table class="table table-hover text-center">
        <tr>
          <th class="text-center">Name</th>
        </tr>
        <% if @workGroups.present? %>
          <% @workGroups.each do |workGroup| %>
            <tr>
              <td><%= workGroup.name %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td>There arent WorkGroups created yet</td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="text-center">
      <p><br/>
      <br/>
      <br/>
      We are working on a request for join button
      <br/>Thank You for the inconvenients.
      </p>
    </div>
    <div class="text-center">
      <p>
        <% if policy(WorkGroup).new? %>
          <%= link_to 'New WorkGroup', new_work_group_path, class: "btn btn-primary" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
