<% provide(:title, "Home") %>

<%= render 'new_advise' %>

<div class="row">
  <div class="col-md-7 col-md-offset-1">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Last Activities
      </div>
      <div class="panel-body">
        <% @activities.each do |activity| %>
          <table class="table">
            <td>
              <% if(current_user.projects.inject(false) {|result, project| result or project.member? activity.owner }) %>
                <%= distance_of_time_in_words( activity.created_at, DateTime.current) %> ago.<br/>
                <%= link_to activity.owner.username, activity.owner if activity.owner %>
                <%= render_activity activity %>
              <% else %>
                There are no Notifications
              <% end %>
            </td>
          </table>
        <% end %>
        <%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Your Projects
      </div>
      <div class="panel-body">
        <% @projects.each do |project| %>
          <table class="table">
            <td>
              <%= link_to project.name, project_path(project) %>
            </td>
          </table>
        <% end %>
        <%= will_paginate @projects, :page_links => false, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>
