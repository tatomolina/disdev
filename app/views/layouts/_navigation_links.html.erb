<%# If the user is loged i show the options workGroup and StandUp's%>
<% if current_user.present? %>
  <%# If the user is in a workGroup i show the link to my WorkGroup%>
  <% if current_user.work_group.present? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">WorkGroup <span class="caret"></span></a>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Search", work_groups_path %></li>
        <li><%= link_to "WorkGroup", work_group_path(current_user.work_group.id) %></li>
      </ul>
    </li>
  <% end %>
  <li><%= link_to "My StandUp's", user_path(current_user) %></li>
<% end %>
